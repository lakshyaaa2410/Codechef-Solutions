#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll x, y, z;
    cin >> x >> y >> z;

    ll seatsAva = x * 10;

    if (y <= seatsAva)
        cout << y * z << nline;
    else
        cout << seatsAva * z << nline;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    cin >> T;
    while (T--) 
    {
        solve();
    }

}
